{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true, // https://github.com/microsoft/TypeScript/wiki/Performance#isolated-file-emit
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true, // https://github.com/microsoft/TypeScript/wiki/Performance#skipping-dts-checking
    "strict": true,
    "target": "ES2017",
    "types": [],
    "composite": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "rootDir": "src"
  },
  "include": ["src/**/*"]
}
